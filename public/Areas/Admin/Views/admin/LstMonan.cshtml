@model IEnumerable<LuanVan.Models.MonAn>

@{
    ViewBag.Title = "LstMonan";
    Layout = "~/Areas/Admin/Views/_LayoutPageAdmin.cshtml";
}

<h2>Danh Sách Món Ăn</h2>

<p>
    @Html.ActionLink("Thêm món ăn", "formThemMonAn")
</p>
<table class="table">
    <tr>
        <th>
           ID
        </th>
        <th>
            Tên
        </th>
        <th>
           Giá
        </th>
        <th>
           Hình
        </th>
        <th>
           Trạng Thái
        </th>
        <th>
            ID Loại Món Ăn
        </th>
        <th>
           Nguyên Liệu
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.monan_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.monan_ten)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.monan_gia)
        </td>
        <td>
            <img src="@Url.Content(item.monan_hinh)" height="80" width="100" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.monan_trangthai)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.loaimonan_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nguyenlieu_ten)
        </td>
        <td>
            @Html.ActionLink("Sửa", "suamonan", new { id=item.monan_id}) |
            @*@Html.ActionLink("Xóa", "actxoaMonAn", new { id = item.monan_id })*@
            @Html.ActionLink("Ẩn", "actanmonan", new { id = item.monan_id })
        </td>
    </tr>
}

</table>
