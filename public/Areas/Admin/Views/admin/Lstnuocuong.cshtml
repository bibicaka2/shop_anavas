@model IEnumerable<LuanVan.Models.NuocUong>

@{
    ViewBag.Title = "Lstnuocuong";
    Layout = "~/Areas/Admin/Views/_LayoutPageAdmin.cshtml";
}

<h2>Danh Sách Nước Uống</h2>

<p>
    @Html.ActionLink("Thêm Mới", "formthemnuocuong")
</p>
<table class="table">
    <tr>
        <th>
           ID
        </th>
        <th>
              Tên
        </th>
        <th>
              Hình
        </th>
        <th>
            GIá
        </th>
        <th>
            Trạng Thái
        </th>
        <th>
           ID Loại Nước Uống
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
           @item.nuocuong_id
        </td>
        <td>
            @item.nuocuong_ten
        </td>
        <td>
            <img src="@Url.Content(item.nuocuong_hinh)" height="80" width="100" />
        </td>
        <td>
        @item.nuocuong_gia
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nuocuong_trangthai)
        </td>
        <td>
          @item.loainuocuong_id
        </td>
        <td>
            @Html.ActionLink("Sửa", "formsuanuocuong", new { id=item.nuocuong_id}) |
            @*@Html.ActionLink("Xóa", "actXoanuocuong", new { id = item.nuocuong_id })*@
            @Html.ActionLink("Ẩn", "actannuocuong", new { id = item.nuocuong_id }) 
        </td>
    </tr>
}

</table>
