<div class="text-left heading-section ftco-animate fadeInUp ftco-animated">
    <h3>Chọn Bàn</h3>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="border border-dark p-5" style="background-color:#ffffff">
            <div class="justify-content-center">
                <div id="divShowXepBan" name="divShowXepBan">

                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
            var PaID = @Model.phongan_id;
            $.get('/Admin/Admin/showXepBan/' + PaID, function (data) { //data là kết quả server trả về
                $('#divShowXepBan').html(data); //chuyển data đc gửi về thành tài liệu html và hiển thị lên view
            })

            //divShowMoTa
            $('#phongan_id').change(function () {
                var phongan_id = $('#phongan_id').val();
                //alert(malop);
                var url = '/Admin/Admin/showXepBan/' + phongan_id;
                $.get(url, function (data) { //data là kết quả server trả về
                    $('#divShowXepBan').html(data); //chuyển data đc gửi về thành tài liệu html và hiển thị lên view
                })
            });
        });
</script>

