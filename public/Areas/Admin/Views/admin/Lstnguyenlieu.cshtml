@model IEnumerable<LuanVan.Models.NguyenLieu>

@{
    ViewBag.Title = "Lstnguyenlieu";
    Layout = "~/Areas/Admin/Views/_LayoutPageAdmin.cshtml";
}

<h2>Danh Sách Nguyên Liệu</h2>

<p>
    @Html.ActionLink("Thêm Nguyên Liệu", "formthemnguyenlieu")
</p>
<table class="table">
    <tr>
        <th>
            ID
        </th>
        <th>
           Tên Nguyên Liệu
        </th>
        <th>
            Đơn Vị Tính
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nguyenlieu_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nguyenlieu_ten)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nguyenlieu_dvt)
        </td>
        <td>
            @Html.ActionLink("Sửa", "formsuanguyenlieu", new { id=item.nguyenlieu_id  }) |

        </td>
        @*<td>
            @Html.ActionLink("Xóa", "actXoaNguyenLieu", new { id = item.nguyenlieu_id }) 
        </td>*@
    </tr>
}

</table>
