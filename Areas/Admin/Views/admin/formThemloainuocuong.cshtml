@model LuanVan.Models.LoaiNuocUong

@{
    ViewBag.Title = "formThemloainuocuong";
    Layout = "~/Areas/Admin/Views/_LayoutPageAdmin.cshtml";
}

<h2>Thêm Loại Nước Uống</h2>

@using (Html.BeginForm("actThemLoaiNuocUong","Admin",FormMethod.Post))
{
    <div>
        @Html.ActionLink("Quay Lại", "LstLoaiNuocUong")
    </div>
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Thông Tin Loại Nước Uống</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
           <label>ID Loại Nước Uống</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.loainuocuong_id, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.loainuocuong_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Tên Loại Nước Uống</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.loainuocuong_ten, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.loainuocuong_ten, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-default" />
            </div>
        </div>
    </div>
}


