@model IPagedList<LuanVan.Models.HoaDon>

@{
    ViewBag.Title = "Danh sách hóa đơn";
    Layout = "~/Areas/Admin/Views/_LayoutPageAdmin.cshtml";
}
@using PagedList.Mvc;
@using PagedList;
<h2>Danh sách hóa đơn</h2>


<table class="table">
    <tr>
        <th>
            ID
        </th>
        <th>
            Ngày lập
        </th>
        <th>
            Dịch vụ
        </th>
        <th>
            Món ăn
        </th>
        <th>
            Thức uống
        </th>
        <th>
            SDT Thực khách
        </th>
        <th>
            Phòng ăn
        </th>
        <th>
            Bàn ăn
        </th>
        <th>
            Tổng Tiền
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.hoadon_id)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.hoadon_ngaylap)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.hoadon_dichvu_tonggia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.hoadon_monan_tonggia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.hoadon_thucuong_tonggia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.thuckhach_sdt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.phongan_id)
        </td>
        <td>
            Bàn @Html.DisplayFor(modelItem => item.banan_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.hoadon_tongtien)
        </td>
        <td> 
            @Html.ActionLink("Chi tiết", "actChiTietHoaDon", new {  id=item.hoadon_id  })
        </td>
    </tr>
}

</table>
@Html.PagedListPager(Model, i => Url.Action("LstHoaDon", "Admin", new { i }))